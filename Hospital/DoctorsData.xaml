<Window x:Class="Hospital.DoctorsData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="DoctorsData" Height="321.688" Width="548.954">
    <Grid>
        <ListView Name="doctorsListView" Margin="0,0,0,45">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Imię i nazwisko" Width="414" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Specjalizacja" Width="120" DisplayMemberBinding="{Binding Specialization}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
